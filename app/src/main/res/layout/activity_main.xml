<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGray"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_14sdp">

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_log_out"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imgMenu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/ic_menu"
            android:visibility="gone" />

        <ImageView
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_60sdp"
            android:src="@drawable/ic_happy_pizza" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/pichi"
        android:gravity="center"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <LinearLayout
            android:id="@+id/btnNotReady"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_unprepared" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/not_ready"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnReady"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_prepared" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/ready"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnHistory"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/ic_order_history" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="@string/order_history"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSending"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_delivery_orange" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="درحال ارسال"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnProductsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_product_inventory" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="موجودی محصول ها"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnCheckoutDeli"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_17sdp"
            android:layout_weight="1"
            android:background="@drawable/stroke_red"
            android:elevation="@dimen/_2sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_product_inventory" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center|right"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingRight="@dimen/_10sdp"
                android:text="تسویه حساب با پیک"
                android:textColor="@color/darkGray"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" />

    </LinearLayout>

</LinearLayout>